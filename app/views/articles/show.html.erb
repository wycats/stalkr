<h1><%= @article.title %></h1>

<%= @article.body %>
<p><%= link_to "Back", resource(:articles) %></p>

<h2>Comments</h2>
<ul class="comments">
<% @article.comments.each do |comment| %>
  <li>
    <h4><%=h comment.author %></h4>
    <div><%=h comment.body %></div>
  </li>
<% end %>
</ul>

<%= form_for Comment.new, :action => resource(@article, :comments) do %>
  <p><%= text_field :author, :label => "Author" %></p>
  <p><%= text_area   :body,   :label => "Comment" %></p>
  <p><%= submit "Submit" %></p>
<% end =%>