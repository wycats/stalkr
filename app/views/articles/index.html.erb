<h1>Blog Posts</h1>

<ul>
  <% @articles.each do |article| %>
  <li>
    <h4><%= article.title %></h4>
    <p><%= read_more(article.body, article, 150) %>
       <%= link_to "[delete]", resource(article, :delete) %>
       <%= link_to "[edit]", resource(article, :edit) %></p>
  </li>
  <% end %>
</ul>